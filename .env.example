# ============================================
# GHIA Configuration - Production Template
# ============================================

# Environment
ENVIRONMENT=development
DEBUG=true

# LLM API Keys (Get free from console.groq.com)
GROQ_API_KEY=your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# LiveKit (Optional - for real-time streaming)
LIVEKIT_URL=wss://your-app.livekit.cloud
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=

# Security (IMPORTANT: Generate secure keys for production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# ABDM Integration (Optional - for Ayushman Bharat)
ABDM_CLIENT_ID=
ABDM_CLIENT_SECRET=
ABDM_ENVIRONMENT=sandbox

# PHC Configuration
DEFAULT_PHC_ID=PHC-MP-BPL-001
PHC_STATE=MP
PHC_DISTRICT=Bhopal

# Analytics
ENABLE_ANALYTICS=true
OUTBREAK_ALERT_EMAIL=health.officer@district.gov.in

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60